{% extends 'base.html.twig' %}

{% block body %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">


                <div class="col-lg-8 col-md-7 col-lg-offset-2">
                    <div class="card">
                        <div class="header">
                            <h4 class="title ">Detalle</h4>
                            <hr>
                        </div>
                        <div class="content">
                            {% if pago.tipoPago.id == 3 %}
                                <div class="row">
                                    <div class="col-md-4 col-md-offset-2">
                                        <div class="form-group">
                                            <label>Proyecto:</label>
                                            {{ pago.proyecto  }}
                                        </div>
                                    </div>
                                    <div class="col-md-4 ">
                                        <div class="form-group">
                                            <label>Ingreso:</label>
                                            ${{ pago.ingreso  }}
                                        </div>
                                    </div>

                                </div>
                            {% endif %}
                            {% if pago.tipoPago.id == 2 %}
                                <div class="row">

                                    <div class="col-md-4 col-md-offset-2">
                                        <div class="form-group">
                                            <label>Extraccion:</label>
                                            ${{ pago.extraccion  }}
                                        </div>
                                    </div>

                                </div>
                            {% endif %}
                            {% if pago.tipoPago.id == 1 %}
                                <div class="row">
                                    <div class="col-md-4 col-lg-offset-2 ">
                                        <div class="form-group">
                                            <label>Pago:</label>
                                            ${{ pago.egreso  }}
                                        </div>
                                    </div>

                                </div>
                            {% endif %}



                            <div class="row">
                                <div class="col-md-4 col-md-offset-2">
                                    <div class="form-group">
                                        <label >Fecha registro:</label>
                                        {% if pago.fecha %}{{ pago.fecha|date('Y-m-d ') }}{% endif %}
                                    </div>
                                </div>

                            </div>
                            <hr>
                            <div class="text-center">
                                {{ form_start(delete_form) }}
                                <input   class=" btn btn-danger btn-fill btn-wd" type="submit" value="Eliminar">
                                {{ form_end(delete_form) }}
                                <br>
                                {#<a  class=" btn btn-info btn-fill btn-wd"  href="{{ path('admin_pedido_edit', { 'id': pedido.id }) }}">Editar</a>#}

                                <a  class=" btn btn-info btn-fill btn-wd" href="{{ path('admin_pago_index') }}">Volver a la lista</a>
                                <a class=" btn btn-success btn-fill btn-wd" href="{{ path('admin_pago_edit', { 'id': pago.id }) }}">Edit</a>
                            </div>
                            <div class="clearfix"></div>

                        </div>

                    </div>

                </div>


            </div>
        </div>
    </div>



{% endblock %}
