{% extends 'base.html.twig' %}

{% block body %}


    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 col-md-7 col-lg-offset-2">
                    <div class="card">
                        <div class="header">
                            <h4 class="title text-center">Crear Proyecto</h4>
                        </div>
                        <div class="content">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6" >
                                    <div class="form-group">
                                        <label class="text-center">Cliente</label>
                                        {{ form_widget(form.cliente, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                                <div class="col-md-6" >
                                    <div class="form-group" >
                                        <label class="text-center">Titulo</label>
                                        {{ form_widget(form.titulo, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>


                            </div>

                            <div class="row">

                                <div class="col-md-6 ">
                                    <div class="form-group">
                                        <label class="text-center">Se√±a</label>
                                        {{ form_widget( form.entregado , { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                                <div class="col-md-6 ">
                                    <div class="form-group ">
                                        <label class="text-center">Total</label>
                                        {{ form_widget(form.total, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 hide">
                                    <div class="form-group ">
                                        <label class="text-center">fecha</label>
                                        {{ form_widget(form.fecha, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>
                                <div class="col-md-6 hide">
                                    <div class="form-group ">
                                        <label class="text-center">estado</label>
                                        {{ form_widget(form.estado, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>

                            </div>
                            <div class="row ">
                                <div class="col-md-6 col-lg-offset-3">
                                    <div class="form-group ">
                                        <label class="text-center">Descripcion</label>
                                        {{ form_widget(form.descripcion, { 'attr': {'class':'form-control border-input'}})}}
                                    </div>
                                </div>

                            </div>




                            <div class="text-center">
                                <a  class="btn btn-info btn-fill btn-wd"  href="{{ path('admin_proyecto_index') }}">Volver a la lista</a>

                                <input class="btn btn-success btn-fill btn-wd" type="submit" value="Crear" />
                            </div>
                            <div class="clearfix"></div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
{% endblock %}
